    <!--* Events Carousel Section -->
    <% if (events && events.length > 0) { %>
    <section id="events-carousel-section" class="py-5 bg-light">
      <div class="container-fluid">
        <header class="text-center mb-4">
          <h2 class="display-4 ff-4 mb-3">Upcoming Events</h2>
          <p class="lead">Join us at our upcoming events</p>
        </header>
        <div class="events-carousel-wrapper">
          <div class="events-carousel-container">
            <div class="events-carousel-track" id="eventsCarouselTrack">
              <!-- First set of events -->
              <% events.forEach(event => { %>
              <div class="events-carousel-item">
                <a href="/events#event-<%= event._id %>" class="text-decoration-none text-dark">
                  <div class="events-carousel-card">
                    <div class="events-carousel-image-container">
                      <img 
                        src="<%= event.image.url %>" 
                        alt="<%= event.name %>" 
                        class="events-carousel-image"
                        crossorigin="anonymous"
                      />
                    </div>
                    <div class="events-carousel-info">
                      <h3 class="events-carousel-title"><%= event.name %></h3>
                      <div class="events-carousel-price">
                        <% if (event.priceInCents === 0) { %>
                          <span class="price-label">Free Event</span>
                        <% } else { %>
                          <span class="price-label">Ticket Price:</span>
                          <span class="price-value"><%= event.formattedPrice %></span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <% }); %>
              <!-- Duplicate set for seamless infinite loop -->
              <% events.forEach(event => { %>
              <div class="events-carousel-item">
                <a href="/events#event-<%= event._id %>" class="text-decoration-none text-dark">
                  <div class="events-carousel-card">
                    <div class="events-carousel-image-container">
                      <img 
                        src="<%= event.image.url %>" 
                        alt="<%= event.name %>" 
                        class="events-carousel-image"
                        crossorigin="anonymous"
                      />
                    </div>
                    <div class="events-carousel-info">
                      <h3 class="events-carousel-title"><%= event.name %></h3>
                      <div class="events-carousel-price">
                        <% if (event.priceInCents === 0) { %>
                          <span class="price-label">Free Event</span>
                        <% } else { %>
                          <span class="price-label">Ticket Price:</span>
                          <span class="price-value"><%= event.formattedPrice %></span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% } %>

